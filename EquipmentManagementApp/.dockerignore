# -------- BUILD STAGE --------
FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# -------- RUN STAGE --------
FROM nginx:alpine
WORKDIR /usr/share/nginx/html

# nginx config (proxy /api -> backend)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# ⚠️ ВАЖНО: правильный путь Angular dist
COPY --from=build /app/dist/EquipmentManagementApp/browser/ /usr/share/nginx/html/

EXPOSE 80

